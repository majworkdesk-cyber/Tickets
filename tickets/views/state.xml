<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Tree View for State -->
        <record id="view_state_tree" model="ir.ui.view">
            <field name="name">state.name.tree</field>
            <field name="model">state.name</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="sequence"/>
                    <field name="name"/>
                    <field name="color"/>
                    <field name="fold"/>
                    <field name="requirements"/>
                </tree>
            </field>
        </record>

        <!-- Form View for State -->
        <record id="view_state_form" model="ir.ui.view">
            <field name="name">state.name.form</field>
            <field name="model">state.name</field>
            <field name="arch" type="xml">
                <form string="Ticket State">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="sequence"/>
                            <field name="color"/>
                            <field name="fold"/>
                            <field name="requirements"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action for State -->
        <record id="action_state_name" model="ir.actions.act_window">
            <field name="name">Ticket States</field>
            <field name="res_model">state.name</field>
            <field name="view_mode">tree,form</field>
        </record>

    <menuitem id="ticket_menu_root" name="Tickets" sequence="1"/>
    <!-- This Menu Item Must have a parent -->
    <menuitem id="config_menu_categ" name="config" parent="ticket_menu_root" sequence="2" groups="tickets.group_admin,tickets.group_sales"/>
    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="state_menu_act" name="states" parent="config_menu_categ" action="action_state_name" sequence="1" groups="tickets.group_admin,tickets.group_sales"/>

    </data>
</odoo>
