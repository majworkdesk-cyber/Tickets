<?xml version="1.0" encoding="UTF-8"?>
<odoo>
   <data>
    <record id="email_template_ticket_update" model="mail.template">
        <field name="name">Ticket Update Notification</field>
        <field name="model_id" ref="model_ticket_name"/>
        <field name="subject">Ticket ${object.name} Update</field>
        <field name="email_to">${object.customer_name_id.email}</field>
        <field name="body_html" type="html">
            <p>Hello ${object.customer_name_id.name},</p>
            <p>Your ticket <strong>${object.name}</strong> has been updated.</p>
            <p>Status: ${object.states.name}</p>
        </field>
    </record>
   </data>
</odoo>
