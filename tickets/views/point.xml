<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="point_form" model="ir.ui.view">
            <field name="name">point.form</field>
            <field name="model">point.name</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <field name="customer_id" groups="tickets.group_admin,tickets.group_sales"/>
                            <field name="name" groups="tickets.group_admin,tickets.group_sales" placeholder="e.g. &quot;Hanya Isi Dengan Angka 123... &quot;"/>
                            <field name="product_point"/>
                            <field name="expired_date"/>
                            <field name="total_min_points"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="point_tree" model="ir.ui.view">
            <field name="name">point.tree</field>
            <field name="model">point.name</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="customer_id"/>
                    <field name="name"/>
                    <field name="product_point"/>
                    <field name="expired_date"/>
                    <field name="total_min_points"/>
                </tree>
            </field>
        </record>
        <record id="point_action" model="ir.actions.act_window">
            <field name="name">Customer Point</field>
            <field name="res_model">point.name</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="ticket_menu_root" name="Tickets" sequence="1"/>
        <!-- This Menu Item Must have a parent -->
        <menuitem id="config_menu_categ" name="config" parent="ticket_menu_root" sequence="2" groups="tickets.group_admin,tickets.group_sales"/>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="point_menu_act" name="Points" parent="config_menu_categ" action="point_action" sequence="5" groups="tickets.group_admin,tickets.group_sales"/>

    </data>
</odoo>